#!/usr/bin/python
description="""
Intellectual entity validator for Densho Digital Repository.
"""
epilog="""
Text to display after argument listing.
Does not appear to do linebreaks.
"""


import argparse
import sys
import unittest

from ddrlint.ddr_collection import collection_all_suite


def main():
    parser = argparse.ArgumentParser(description=description, epilog=epilog)
    parser.add_argument('collection_path', help='Path to collection directory')
    args = parser.parse_args()

    results = collection_all_suite(args.collection_path)
    for line in results:
        print(line)

if __name__ == '__main__':
    main()
